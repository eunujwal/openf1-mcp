{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ES2022",
      "lib": ["ES2022"],
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "allowImportingTsExtensions": false,
      "moduleDetection": "force"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
  }